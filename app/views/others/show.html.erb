# encoding: utf-8

<% content_for :title, @other.Name %>
<% content_for :javascript_includes do %>
  <%= javascript_include_tag "gallery.js" %>
  
  <script>
	window.onload = function(){
		updateSidebar();
		loadImages("<%=glob_asset_dir(@other.Images)%>".replace(/&quot;/g,'"'));
	};


	$(window).resize(function(){
		updateSidebar();
		resizeGallery();
	});
  </script>
<% end %>


<div class="project_header">					
	<div class="title project_title"><%= @other.Name %></div>
</div>

<!--- HTML 5 --->	
<div class="gallery_spacer">
	<div id="gallery_div" class="gallery_div">
			<canvas id="image_gallery" class="gallery" tabindex="0" >  </canvas>
			<canvas id="gallery_controls" class="gallery controls" tabindex="0">  </canvas>
	</div>
</div>

<div class="summary">
	<table>
		<tr><td>Project Type:</td> <td><%=raw @other.Type %></td></tr>
		<tr><td>Platform:</td> <td><%=raw @other.Platform %></td></tr>
		<tr><td>Team:</td> <td><%=raw @other.Team %></td></tr>
		<tr><td>Date:</td> <td><%=raw @other.Date %></td></tr>
		<tr><td><%=raw @other.Links %></td></tr>
	</table>
	<h2>Description:</h2>
	<div class="description"><p><%=raw @other.Description %></p></div>
	
	<h2>What I did:</h2>
	<div class="done"><ul><%=raw @other.Done %></ul></div>
	</td></tr>	 
</div>